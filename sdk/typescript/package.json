{
	"name": "@evarisai/client",
	"version": "0.1.0",
	"description": "Lightweight TypeScript client for Evaris AI evaluation platform",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": ["dist"],
	"scripts": {
		"build": "tsup src/index.ts --format esm,cjs --dts",
		"dev": "tsup src/index.ts --format esm,cjs --dts --watch",
		"test": "vitest",
		"lint": "biome lint src/",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"tsup": "^8.0.0",
		"typescript": "^5.9.3",
		"vitest": "^3.0.0"
	},
	"keywords": ["evaris", "ai", "evaluation", "llm", "observability"],
	"author": "Evaris AI",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/evarisai/evaris",
		"directory": "sdk/typescript"
	}
}
